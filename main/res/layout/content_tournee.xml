<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.cara.agess.TourneeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar">

        <Button
            android:id="@+id/tournees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TournÃ©es"
            android:textSize="14sp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/button"
            android:layout_margin="3dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/filtre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtre"
            android:layout_weight="1"
            android:textSize="14sp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/button"
            android:layout_margin="3dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/fin_de_travail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fin de Travail"
            android:layout_weight="1"
            android:textSize="14sp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/button"
            android:layout_margin="3dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>


    <ListView
        android:id="@+id/listElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="132dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:title="Liste des Elements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

</RelativeLayout>
